@model ToDoApp.ViewModels.ToDoViewModel

<form id="createForm" method="post" asp-controller="Todos" asp-action="Create" data-ajax="true" data-ajax-update="#createForm" data-ajax-mode="replace">
    <div class="text-danger" asp-validation-summary="ModelOnly">
        <input type="hidden" asp-for="TaskId" />
    </div>
    <div class="form-group row">
        <div class="col-3">
            <label asp-for="Task"></label>
        </div>
        <div class="col-6">
            <input asp-for="Task" class="form-control" />
            <span asp-validation-for="Task" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-3">
            <label asp-for="Deadline"></label>
        </div>
        <div class="col-6">
            <input asp-for="Deadline" class="form-control" />
            <span asp-validation-for="Deadline" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-3">
            <label asp-for="Notes"></label>
        </div>
        <div class="col-6">
            <input asp-for="Notes" class="form-control" />
            <span asp-validation-for="Notes" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-3 offset-3">
            <button type="submit" class="btn btn-primary form-control">
                Create
            </button>
        </div>
    </div>
</form>